    <listeners>
        <listener class-name="com.epam.tat.realtor.listeners.RealtorListener"/>
    </listeners>

    <test name="RealtorTest" >
        <classes>
            <class name="com.epam.tat.realtor.tests.EditProfileNameTest"/>
            <class name="com.epam.tat.realtor.tests.EditProfileAddressTest"/>
            <class name="com.epam.tat.realtor.tests.MapMarksTest"/>
            <class name="com.epam.tat.realtor.tests.RealtorReviewsTest"/>
            <class name="com.epam.tat.realtor.tests.RealtorSoldHousesTest"/>
            <class name="com.epam.tat.realtor.tests.SavedHomesTest"/>
            <class name="com.epam.tat.realtor.tests.SavedSearchTest"/>
            <class name="com.epam.tat.realtor.tests.SearchByConditionsTest"/>
            <class name="com.epam.tat.realtor.tests.SortByPriceTest"/>
