<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd" >

<suite name="RealtorSuite" verbose="1" >

    <listeners>
        <listener class-name="com.epam.reportportal.testng.ReportPortalTestNGListener"/>
        <listener class-name="com.epam.tat.realtor.listeners.IAnnotationTransformerListener"/>
    </listeners>

    <test name="RealtorTest" >
        <classes>
            <class name="com.epam.tat.realtor.tests.MapMarksTest"/>
            <class name="com.epam.tat.realtor.tests.NumberOfHousesFoundTest"/>
            <class name="com.epam.tat.realtor.tests.RestaurantsFilterTest"/>
            <class name="com.epam.tat.realtor.tests.SchoolRatingTest"/>
            <class name="com.epam.tat.realtor.tests.SearchByConditionsTest"/>
            <class name="com.epam.tat.realtor.tests.SortByPriceTest"/>
        </classes>
    </test>
</suite>
